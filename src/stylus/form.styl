.form 
	margin-bottom margin-small
	
.input
	border 1px solid input_border_default
	border-radius 4px
	line-height: 1.2em;
	width 100%
	padding 7px 8px
	box-sizing border-box
	font-size 1.4em 
	color trolley-gray-400
	&.error
		border-color input_border_error
	&:filled
		color trolley-gray-800
	@media screen and (min-width: media-screen-s)
		&:hover
			border-color input_border_hover
	
.label, label
	display inline-block
	font-weight bold
	font-size 1.4em
	margin-bottom: 0.8rem;
	margin-top .2rem
	&.error
		color error
		font-size 1.1em
		margin-top 4px
		font-weight normal
		padding-left 8px
		margin-bottom 0
	


.login-form
	min-height 100vh
	width 100%
	display grid
	grid-template-rows 1fr auto 1fr
	align-items center
	justify-content center
	position relative
	
	&__form-wrapper
		width calc(100% - 24px)
		margin 0 auto
		position relative
		perspective 3000px
		@media screen and (min-width: media-screen-s)
			width 100%
			max-width 552px
			
	&__form-process, &__form-container
		width 100%
		box-sizing border-box
		background card_bg
		border-radius 8px
		transition .8s transform ease-out	
				
	&__form-process
		position absolute
		z-index 10
		left 0
		top 0
		height 100%
		transform rotateY(-180deg)
		backface-visibility hidden
		display flex
		align-items center
		justify-content center
		text-align center
		font-size 1.6em
		visibility hidden
		&.sent
			visibility visible
			transform rotateY(0)
				
	&__form-container
		padding 28px
		grid-row-start 2
		grid-row-end 3
		position relative
		perspective 3000px
		backface-visibility hidden
		transform rotateY(0)
		@media screen and (min-width: media-screen-s)
			padding 48px
		&.sent
			transform rotateY(180deg)
			&:after 
				background primary_color
		
		&:after 
			content " "
			position absolute
			z-index 10
			background alpha(primary_color, 0)
			height 100%
			width 100%
			left 0
			top 0
			border-radius 8px
			pointer-events none
			transition .8s background ease-out
		
	&__h2
		margin-top 0
		cursor default
			
.slash-text 
	display grid
	grid-template-columns auto max-content auto
	grid-column-gap 8px
	background card_bg
	position relative
	line-height: 3.2rem;
	text-align center
	margin-bottom margin-small
	font-size 1.4em
	font-weight 600
	color input_border_hover
	@media screen and (min-width: media-screen-s)
		cursor default
		
	&__stroke
		height 1px
		width 100%
		background devider_color
		top 50%
		position relative
			
		


.info-text 
	margin-bottom 1.2em
	width 100%
	line-height 1.4em
	font-size 1.2em
	
		
.social-buttons
	display grid
	grid-template-columns: 1fr 1fr 1fr
	border-radius 4px
	border 1px solid input_border_default
	font-weight 600
	@media screen and (min-width: media-screen-s)
		column-gap: 12px
		border none
		border-radius inherit
	&__button.social
		line-height: 2.6rem;
		display inline-flex
		color base_text_color
		text-decoration none 
		align-items center
		justify-content center
		font-size 1.2em
		padding .6rem
		box-sizing border-box
		transition transition-background
			
		@media screen and (min-width: media-screen-s)
			border 1px solid input_border_default
			border-radius 4px
			font-size 1.4em
			&:hover 
				background #cccccc30
		
		&:not(:last-child) 
			border-right 1px solid input_border_default
		
	&__icon 
		margin-right 4px 
		float left
		@media screen and (min-width: media-screen-s)
			margin-right 8px 
			float left

	
	
.button.submit
	background submit_button_default
	color text_on_dark
	width 100%
	border none
	cursor pointer
	line-height 4rem
	border-radius 4px
	font-size 1.4em 
	transition transition-background
	padding: 0;
	font-weight 600
	@media screen and (min-width: media-screen-s)
		&:hover 
			background submit_button_hover
	

.form-group 
	margin-bottom margin-small


.shakeit 
	animation 0.4s shakeit ease


@keyframes shakeit 
	0% 
		transform translatex(0px)
	15% 
		transform translatex(-8px)
	35% 
		transform translatex(8px)
	65% 
		transform translatex(-8px)
	85% 
		transform translatex(8px)
	100% 
		transform translatex(0px)

